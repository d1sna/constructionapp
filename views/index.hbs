<div>
    <p>
        ГЛАВНАЯ СТРАНИЦА
    </p>
</div>
{{#if loginText}}

<div class="card-panel #f44336 red">{{loginText}}</div>
<a href='/lk' class="waves-effect waves-light btn #00bcd4 cyan">Личный кабинет</a>
<a href='/' class="waves-effect waves-light btn red">{{buttonText}}</a>

{{else}}
<div class="row">
    <form action="/" class="col s12" method="POST">
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Логин" name='login' type="text" class="validate">
            </div>
            <p>
                <div class="input-field col s6">
                    <input placeholder="Пароль" name='password' type="password" class="validate">
                </div>
            </p>
            <button class="btn waves-effect waves-light" type="submit" name="action">Войти в
                кабинет</button>
            <a href='/registration' class="waves-effect waves-light btn red">Зарегестрироваться</a>
    </form>
</div>
{{/if}}